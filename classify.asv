%% classification into classes
function gender = classify(givenFeatures, classesNo, featuresNo, means, vars)
    for c=2:classesNo
        p(c) = 0.5;
        for f=1:featuresNo
            upup = -(givenFeatures(f)-means(c,f))^2;
            up = exp(  / (2* vars(c,f)^2) )
            down = sqrt( 2*pi* vars(c,f)^2 )
            p(c) = p(c) *  up / down; 
        end
        
    end
    
    [value, index] = max(p);
    gender = index;
end